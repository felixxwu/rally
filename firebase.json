{
  "hosting": {
    "site": "blockyrally",
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "redirects": [
      {
        "source": "/",
        "destination": "https://infinite-rally.web.app",
        "type": 301
      }
    ]
  }
}
